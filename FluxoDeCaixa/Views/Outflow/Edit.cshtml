@model FluxoDeCaixa.Models.Outflow

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Outflow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutflowDate" class="control-label"></label>
                <input asp-for="OutflowDate" class="form-control" />
                <span asp-validation-for="OutflowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutflowDescription" class="control-label"></label>
                <input asp-for="OutflowDescription" class="form-control" />
                <span asp-validation-for="OutflowDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutflowAmount" class="control-label"></label>
                <input asp-for="OutflowAmount" class="form-control" />
                <span asp-validation-for="OutflowAmount" class="text-danger"></span>
            </div>
            <div class="d-flex ">
                <div>
                    <a class="btn btn-outline-primary m-1" asp-action="Index">Voltar</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-success m-1" />
                </div>

            </div>
        </form>
    </div>
</div>



