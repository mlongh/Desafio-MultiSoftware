@model IEnumerable<FluxoDeCaixa.Models.Person>
@{ 
    var person = new Person();
    
}
@{
    ViewData["Title"] = "Pessoas";
}

<h1>@ViewData["Title"] </h1>

<div class="d-flex justify-content-between">

    <p>
        <a asp-action="Create">Novo</a>
    </p>
    <div>
        <form asp-route-id="@person.Name" asp-action="searchfilter" method="get" class="form-inline">
            <input placeholder="Nome" asp-for="@person.Name" class="form-control m-1" />
            <input class="btn btn-primary" type="submit" value="Pesquisar" />
        </form>
    </div>
</div>
<hr />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salary)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountLimit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MinimumValue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salary)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountLimit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MinimumValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
